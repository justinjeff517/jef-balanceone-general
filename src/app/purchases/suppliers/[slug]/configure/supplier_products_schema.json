{
  "schema": [
    {
      "data": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9_-]+$"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "unit": {
          "type": "string",
          "description": "e.g. piece, box, kg, liter"
        },
        "unit_price": {
          "type": "number",
          "minimum": 0
        },
        "active": {
          "type": "boolean",
          "default": true
        },
        "supplier_id": {
          "type": "string",
          "format": "uuid"
        },
        "supplier_name": {
          "type": "string"
        }
      }
    }
  ]
}



