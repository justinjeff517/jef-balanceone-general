{
  "schema": [
    {
      "data": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9_-]+$"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "unit": {
          "type": "string",
          "description": "e.g. piece, box, kg, liter"
        },
        "unit_price": {
          "type": "number",
          "minimum": 0
        },
        "active": {
          "type": "boolean",
          "default": true
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "created_by": {
          "type": "string",
          "format": "uuid"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_by": {
          "type": "string",
          "format": "uuid"
        }
      }
    },
    {
      "metadata": {
        "mongodb": {
          "collection": "products",
          "database": "jef-balanceone-general"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "UTC timestamp when the record was created."
        },
        "created_by": {
          "type": "string",
          "format": "uuid",
          "description": "UUID of the user who created the record."
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "UTC timestamp when the record was last updated."
        },
        "updated_by": {
          "type": "string",
          "format": "uuid",
          "description": "UUID of the user who last updated the record."
        },
        "change_history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "When the change occurred."
              },
              "user_id": {
                "type": "string",
                "format": "uuid",
                "description": "Who made the change."
              },
              "changes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "field": {
                      "type": "string",
                      "description": "Name of the field changed."
                    },
                    "old": {
                      "type": ["null", "string", "number", "array", "object"],
                      "description": "Previous value."
                    },
                    "new": {
                      "type": ["null", "string", "number", "array", "object"],
                      "description": "New value."
                    }
                  },
                  "required": ["field", "old", "new"]
                }
              }
            },
            "required": ["timestamp", "user_id", "changes"]
          }
        }
      }
    }
  ]
}
