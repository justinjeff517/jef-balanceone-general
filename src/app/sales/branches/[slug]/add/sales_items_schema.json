{
  "schema":{
"data":{
  "branch_slug": {
    "type": "string"
  },
  "items": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "quantity": {
          "type": "integer",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "description": "e.g. piece, box, kg, liter"
        },
        "unit_price": {
          "type": "number",
          "minimum": 0
        },
        "total_price": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["id", "name", "quantity", "unit_price", "total_price"],
      "additionalProperties": false
    }
  }
},
   
      "metadata": {
        "mongodb": {
          "collection": "sales",
          "database": "jef-balanceone-general"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "UTC timestamp when the record was created."
        },
        "created_by": {
          "type": "string",
          "format": "uuid",
          "description": "UUID of the user who created the record."
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "UTC timestamp when the record was last updated."
        },
        "updated_by": {
          "type": "string",
          "format": "uuid",
          "description": "UUID of the user who last updated the record."
        },
        "change_history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "When the change occurred."
              },
              "user_id": {
                "type": "string",
                "format": "uuid",
                "description": "Who made the change."
              },
              "changes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "field": {
                      "type": "string",
                      "description": "Name of the field changed."
                    },
                    "old": {
                      "type": ["null", "string", "number", "array", "object"],
                      "description": "Previous value."
                    },
                    "new": {
                      "type": ["null", "string", "number", "array", "object"],
                      "description": "New value."
                    }
                  },
                  "required": ["field", "old", "new"]
                }
              }
            },
            "required": ["timestamp", "user_id", "changes"]
          }
        }
      }
    }
  
