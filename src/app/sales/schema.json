{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sales",
  "type": "object",
  "description": "Record of a sales, including branch details, line items, audit trail, AI-ready summaries, and electronic signature.",
  "properties": {
    "collection": {
      "const": "sales"
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "branch_name": {
      "type": "string",
      "minLength": 1
    },
    "branch_slug": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$"
    },
    "branch_tin": {
      "type": "string",
      "minLength": 1
    },
    "receipt_date": {
      "type": "string",
      "format": "date"
    },
    "receipt_number": {
      "type": "string",
      "minLength": 1
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 0
          },
          "unit_price": {
            "type": "number",
            "minimum": 0
          },
          "total_price": {
            "type": "number",
            "minimum": 0
          }
        },
        "required": ["id", "name", "quantity", "unit_price", "total_price"],
        "additionalProperties": false
      }
    },
    "total_amount": {
      "type": "number",
      "minimum": 0
    },
    "status": {
      "type": "string",
      "enum": ["draft", "submitted", "approved", "paid", "cancelled"]
    },
    "payment_method":{
      "type": "string",
      "enum": ["cash", "cheque", "gcash"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string",
      "format": "uuid"
    },
    "change_history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "changed_at": {
            "type": "string",
            "format": "date-time"
          },
          "changed_by": {
            "type": "string",
            "format": "uuid"
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": { "type": "string" },
                "old_value": { "type": "string" },
                "new_value": { "type": "string" }
              },
              "required": ["field", "old_value", "new_value"],
              "additionalProperties": false
            }
          }
        },
        "required": ["changed_at", "changed_by", "changes"],
        "additionalProperties": false
      }
    },
    "e_signature": {
      "type": "object",
      "properties": {
        "signed_by": {
          "type": "string",
          "format": "uuid"
        },
        "signed_at": {
          "type": "string",
          "format": "date-time"
        },
        "signature_reason": {
          "type": "string",
          "enum": ["submission", "approval", "correction"]
        },
        "signature_hash": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{64}$"
        }
      },
      "required": ["signed_by", "signed_at", "signature_reason", "signature_hash"],
      "additionalProperties": false
    },
    "summary_text": {
      "type": "string",
      "description": "Natural-language summary for vector embedding"
    },
    "items_summary": {
      "type": "string",
      "description": "Bullet-point or inline summary of all items"
    },
    "last_change_summary": {
      "type": "string",
      "description": "Latest change described in plain text"
    }
  },
  "required": [
    "collection", "record_id", "branch_name", "branch_slug", "branch_tin",
    "receipt_date", "receipt_number", "items", "total_amount", "status",
    "created_at", "created_by", "change_history", "e_signature", "summary_text",
    "items_summary", "last_change_summary"
  ],
  "additionalProperties": false
}
